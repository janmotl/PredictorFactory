<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<pattern>
	<name>Time part direct</name>
	<description>
		The hour/day/month of the event.
	</description>
	<example>
		Time of waking up.
	</example>
	<author>Jan Motl</author>
	<date>2015-04-16</date>
	<code>SELECT @baseId
	           , @baseDate
	           , @baseTarget
	           , DATE_PART('hour', @timeColumn) AS "@columnName"
	      FROM @propagatedTable
	</code>
	<parameter key="@field" value="hour, dow, month"/>
	<cardinality>1</cardinality>
</pattern>