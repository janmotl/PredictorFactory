<?xml version="1.0" encoding="UTF-8"?>

<!-- This script should be executed after "release.build.xml" -->

<project name="PredictorFactory" default="replace-directories" basedir="." xmlns:fx="javafx:com.sun.javafx.tools.ant">

	<target name='replace-directories'>
		<delete dir="release/dist/config" />
		<delete dir="release/dist/log" />
		<delete dir="release/dist/pattern" />
		
		<mkdir dir="release/dist/config" />
		<mkdir dir="release/dist/log" />
		<mkdir dir="release/dist/pattern" />
		
		<copy todir="release/dist/config">
			<fileset dir="config" />
		</copy>
		<copy todir="release/dist/pattern">
			<fileset dir="pattern" />
		</copy>
		<copy todir="release/dist/pattern">
			<fileset dir="pattern_bkp" />
		</copy>
	</target>
	
</project>